
<main>
    <div class="container-fluid px-4">
        <h3 class="my-4">Danh Mục Sách</h3>
        
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table me-1"></i>{{items.category}}
                <a href="/books/form" class="btn btn-sm btn-primary float-end">Add</a>
            </div>
            <div class="card-body">
                <table id="datatablesSimple">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Author</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each items.results}}
                        <tr>
                            <td>{{name}}</td>
                            <td>{{author_name}}</td>
                            <td>
                                <a href="/books/one/{{id}}" class="btn btn-sm btn-primary">view</a>
                                <a  href="/books/edit/{{id}}" class="btn btn-sm btn-info">Edit</a>
                                <a href="/books/delete/{{id}}" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>
