
<main>
    <div class="container-fluid px-4">
        
        <div class="card  my-4">
            <div class="card-header">
                <i class="fas fa-table me-1"></i>
                List of Messages
            </div>
            <div class="card-body">
                <table id="datatablesSimple" class="table">
                    <thead class="w-100">
                        <tr>
                            <th>Name</th>
                            <th>Phone</th>
                            <th>Email</th>
                            <th>Message</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody class="">
                        {{#each items.results}}
                        <tr>
                            <td  style="">{{name}}</td>
                            <td  class="">{{phone_number}}</td>
                            <td  class="">{{email}}</td>
                            <td  class="">{{message}}</td>
                            <td  class="">{{created_at}}</td>
                            <td class="col-2">
                                <a href="/messages/{{id}}" class="btn btn-sm btn-primary">View</a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
                <div data-count="{{items}}">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-end">
                            <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1" aria-disabled="true">All</a>
                            </li>
                            {{#each items.pages}}
                            <li class="page-item"><a class="page-link" href="/books?page={{this}}">{{this}}</a></li>
                            {{/each}}
                            <li class="page-item">
                            <a class="page-link" href="#">Next</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="d-none" id="accessToken">{{accessToken}}</div>
</main>
<script>
    localStorage.setItem('accessToken', document.querySelector('#accessToken').innerText)
</script>

