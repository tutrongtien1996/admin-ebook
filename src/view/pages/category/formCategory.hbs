
<main>
    <div class="container-fluid px-4">
        <h3 class="my-4">Create new category</h3>
        <div class="col-md-12 sol-sm-12">
            {{#if id}}
            <form action="/categories/edit/{{id}}" method="post">
            {{else}}
            <form action="/categories/form" method="post">
            {{/if}}
                <fieldset>
                    <div class="mb-3">
                        <label class="form-label">Name</label>
                        <input type="text" id="name_template" name="name" class="form-control" >
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </fieldset>
            </form>
        </div>
    </div>
</main>
